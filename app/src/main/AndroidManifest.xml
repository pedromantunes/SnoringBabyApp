<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.medical.kamran.bluewhite">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.medical.kamran.bluewhite.main" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.medical.kamran.bluewhite.signin" android:screenOrientation="portrait"  />
        <activity android:name="com.medical.kamran.bluewhite.VideoRecording" android:screenOrientation="portrait" android:noHistory="false"/>
        <activity android:name="com.medical.kamran.bluewhite.AudioActivity" android:screenOrientation="portrait" />
        <activity android:name="com.medical.kamran.bluewhite.ReportActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.medical.kamran.bluewhite.RecordnPlayActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.medical.kamran.bluewhite.NoReportActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.medical.kamran.bluewhite.signup" android:screenOrientation="portrait" android:theme="@style/Theme.Intro" />
        <activity android:name="com.medical.kamran.bluewhite.VideoFullActivity" android:screenOrientation="portrait" />
        <activity android:name="com.medical.kamran.bluewhite.ReportListActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>